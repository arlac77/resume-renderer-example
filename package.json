{
  "name": "resume-renderer-example",
  "version": "0.0.0-semantic-release",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "description": "resume-renderer example",
  "keywords": [
    "vite"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "lint:css": "stylelint ./src/*.css",
    "lint": "npm run lint:css",
    "lint:xml": "rnv schema/profile-1.0.rnc profile.xml",
    "normalize-knowledge": "xslt3 -xsl:node_modules/resume-renderer/xslt/normalize-knowledge.xsl -s:profile.xml >knowledge-normalized.xml",
    "preview": "vite preview",
    "update-knowledge": "xslt3 -xsl:node_modules/resume-renderer/xslt/profile2knowledge.xsl -s:profile.xml >knowledge-new.xml"
  },
  "dependencies": {
    "resume-renderer": "^1.1.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/node": "^20.11.19",
    "npm-pkgbuild": "^13.0.20",
    "semantic-release": "^23.0.2",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "vite": "^5.1.4",
    "vite-plugin-compression2": "^0.12.0",
    "xslt3": "^2.6.0"
  },
  "optionalDependencies": {
    "mf-hosting-frontend": "^2.2.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/resume-renderer-example.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/resume-renderer-example/issues"
  },
  "homepage": "https://github.com/arlac77/resume-renderer-example#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "dist/"
    },
    "frontend": true,
    "static": true,
    "example": true,
    "nginx.location.trailer": "  access_log off; "
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx vite build"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-npm-pkgbuild",
      "arlac77/template-vite",
      "arlac77/template-xslt"
    ]
  }
}
